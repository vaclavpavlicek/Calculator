<Page
    x:Class="Calculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <TextBox x:Name="firstTextBox" 
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Top"
                 Margin="215,40,0,0"
                 InputScope="Number"
                 Style="{StaticResource MyTextBoxStyle}"/>

        <TextBox x:Name="secondTextBox" 
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Top"
                 Margin="215,109,0,0"                 
                 InputScope="Number"
                 Style="{StaticResource MyTextBoxStyle}"/>       

        <TextBlock x:Name="firstNumberText"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="12,51,0,0" 
                   TextWrapping="Wrap" 
                   Text="First Number"                    
                   Style="{StaticResource MyTextBlockStyle}"/>

        <TextBlock HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="12,120,0,0" 
                   TextWrapping="Wrap" 
                   Text="Second Number"                    
                   Style="{StaticResource MyTextBlockStyle}"/>

        <Button x:ConnectionId='1' x:Name="plusButton" 
                Content="+"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Margin="12,179,0,0"                 
                Style="{StaticResource MyButtonStyle}"
                                        />

        <Button x:ConnectionId='2' x:Name="minusButton"
                Content="-" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Margin="203,179,0,0"                 
                Style="{StaticResource MyButtonStyle}"
                                         />

        <Button x:ConnectionId='3' x:Name="multiplicationButton"
                Content="*" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Margin="12,222,0,0"
                Style="{StaticResource MyButtonStyle}"
                                                  />
        
        <Button x:ConnectionId='4' x:Name="divisionButton"
        	    Content="%" 
            	HorizontalAlignment="Left" 
              	VerticalAlignment="Top"
                Margin="203,222,0,0"
              	Style="{StaticResource MyButtonStyle}"
                                            />
        
        <TextBlock x:Name="resultTextBlock"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   Margin="12,305,0,0" 
                   TextWrapping="Wrap"
                   Text="Result:"
                   Style="{StaticResource MyTextBlockStyle}"/>

    </Grid>
</Page>

